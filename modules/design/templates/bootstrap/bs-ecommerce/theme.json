{
  "colors": {
    "primary": "#0d6efd",
    "secondary": "#6c757d",
    "success": "#198754",
    "info": "#0dcaf0",
    "warning": "#ffc107",
    "danger": "#dc3545",
    "light": "#f8f9fa",
    "dark": "#212529",
    "background": "#ffffff",
    "text": "#212529"
  },
  "typography": {
    "headingFont": "'Montserrat', sans-serif",
    "bodyFont": "'Roboto', sans-serif",
    "baseFontSize": "16px",
    "smallFontSize": "14px",
    "h1": {
      "fontSize": "2.5rem",
      "fontWeight": "700",
      "lineHeight": "1.2"
    },
    "h2": {
      "fontSize": "2rem",
      "fontWeight": "700",
      "lineHeight": "1.3"
    },
    "h3": {
      "fontSize": "1.75rem",
      "fontWeight": "600",
      "lineHeight": "1.4"
    },
    "h4": {
      "fontSize": "1.5rem",
      "fontWeight": "600",
      "lineHeight": "1.4"
    },
    "h5": {
      "fontSize": "1.25rem",
      "fontWeight": "600",
      "lineHeight": "1.4"
    },
    "h6": {
      "fontSize": "1rem",
      "fontWeight": "600",
      "lineHeight": "1.4"
    },
    "body": {
      "fontSize": "1rem",
      "fontWeight": "400",
      "lineHeight": "1.5"
    },
    "small": {
      "fontSize": "0.875rem",
      "fontWeight": "400",
      "lineHeight": "1.5"
    }
  },
  "spacing": {
    "base": "1rem",
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "1rem",
    "4": "1.5rem",
    "5": "3rem"
  },
  "borders": {
    "radius": "0.375rem",
    "radiusSm": "0.25rem",
    "radiusLg": "0.5rem",
    "radiusPill": "50rem",
    "width": "1px"
  },
  "shadows": {
    "none": "none",
    "sm": "0 .125rem .25rem rgba(0,0,0,.075)",
    "default": "0 .5rem 1rem rgba(0,0,0,.15)",
    "lg": "0 1rem 3rem rgba(0,0,0,.175)"
  },
  "layout": {
    "containerMaxWidth": "1320px",
    "containerWidth": "100%",
    "gridColumns": 12,
    "gridGutter": "1.5rem"
  },
  "components": {
    "navbar": {
      "padding": "0.5rem 1rem",
      "height": "auto",
      "background": "var(--bs-light)",
      "borderBottom": "1px solid rgba(0,0,0,.1)"
    },
    "card": {
      "background": "#fff",
      "border": "1px solid rgba(0,0,0,.125)",
      "borderRadius": "0.375rem",
      "padding": "1rem",
      "shadow": "0 .125rem .25rem rgba(0,0,0,.075)"
    },
    "button": {
      "padding": "0.375rem 0.75rem",
      "border": "1px solid transparent",
      "borderRadius": "0.375rem",
      "fontSize": "1rem",
      "fontWeight": "400",
      "lineHeight": "1.5"
    },
    "form": {
      "inputHeight": "calc(1.5em + 0.75rem + 2px)",
      "inputPadding": "0.375rem 0.75rem",
      "inputBorder": "1px solid #ced4da",
      "inputBorderRadius": "0.375rem",
      "inputFocusBorderColor": "#86b7fe",
      "inputFocusBoxShadow": "0 0 0 0.25rem rgba(13,110,253,.25)"
    }
  },
  "bootstrap": {
    "version": "5.3.0",
    "navbar": {
      "style": "navbar-light bg-light",
      "enableSearch": true,
      "enableCart": true,
      "enableAccount": true
    },
    "footer": {
      "style": "bg-light text-dark"
    },
    "productCard": {
      "showRatings": true,
      "enableQuickView": true,
      "enableWishlist": true,
      "showMainAddToCart": true
    }
  }
}